@model IEnumerable<ShoppingCart.Models.ManageUser>

@{
    ViewBag.Title = "Index";
}

<h2>會員管理</h2>

@if (ViewBag.ResultMessage != null)
{
    @Html.Label("info", (string)ViewBag.ResultMessage, new { @class = "text-info"})
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
        </td>
        <td>
            @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @Class = "Delete" }))
            {
                @Html.Hidden("id", item.Id)
                <input type="submit" value="刪除" class="btn btn-default" />
            }
    </td>
    </tr>
}

</table>
